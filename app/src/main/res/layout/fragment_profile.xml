<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">
    <!-- LinearLayout como Ãºnico hijo directo del ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_logo"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/logo"
                android:maxWidth="180dp"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_main_head"
                android:layout_marginTop="30dp"
                android:text="@string/welcome_app"
                android:textAlignment="center"
                android:layout_below="@+id/imageView_logo"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_login"
                android:text="@string/login_btn"
                android:layout_marginTop="100dp"
                android:layout_below="@id/textview_main_head"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_register"
                android:text="@string/signin_btn"
                android:layout_below="@id/button_login"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_acceded"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:visibility="gone">
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/circle_background"
                android:clipToOutline="true"
                android:id="@+id/fr_image">
                <ImageView
                    android:id="@+id/im_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_profile"
                    android:adjustViewBounds="true"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_username"
                android:layout_below="@id/fr_image"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_marginTop="10dp"
                android:text="Michael"
                android:textColor="@color/title"
                android:textAlignment="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_email"
                android:layout_below="@id/tv_username"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:text="Khabibmike@gmail.com"
                android:gravity="center_horizontal"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/acb_userconfig"
                android:text="@string/configbtn_app"
                android:textAlignment="viewStart"
                android:layout_below="@id/tv_user_email"
                android:drawableStart="@drawable/ic_settings"
                android:background="@drawable/apb_background"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:layout_marginTop="25dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/acb_appconfig"
                android:text="@string/about_app"
                android:textAlignment="viewStart"
                android:layout_below="@id/acb_userconfig"
                android:drawableStart="@drawable/ic_settings"
                android:background="@drawable/apb_background"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:layout_marginTop="25dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_admin"
                android:layout_below="@id/acb_appconfig"
                android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/acb_admin"
                android:text="@string/btn_admin"
                android:textAlignment="viewStart"
                android:drawableStart="@drawable/ic_settings"
                android:background="@drawable/apb_background"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:layout_marginTop="25dp"
                android:visibility="gone"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/acb_main"
                android:text="@string/btn_main"
                android:textAlignment="viewStart"
                android:drawableStart="@drawable/ic_settings"
                android:background="@drawable/apb_background"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:layout_marginTop="25dp"
                android:visibility="gone"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b_logout"
                android:layout_below="@id/ll_admin"
                android:text="@string/logout_btn"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="25dp"
                app:cornerRadius="10dp"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>